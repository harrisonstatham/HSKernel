
# Three commands:
#
# nasm <boot_sect_file>.asm -f bin -o <boot_sect_file>.bin
#
# xxd <boot_sect_file>.bin
#
# /<qemu-install-dir>/qemu-system-x86_64 <boot_sect_file>.bin

SHELL := /bin/bash

BOOT_FILE_NAME  = boot_sect1

all: \
    $(SHELL nasm $(BOOT_FILE_NAME).asm -f bin -o $(BOOT_FILE_NAME).bin)

clean: \
    $(SHELL rm -rf $(BOOT_FILE_NAME).bin)


ViewBin: \
    $(shell xxd $(BOOT_FILE_NAME).bin)

